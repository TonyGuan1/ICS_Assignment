import java.util.Scanner;
class Main extends Calculation{
    public static void main(String args[]) {
        Scanner reader = new Scanner(System.in);
        System.out.println("Enter a shape:\ncircle \nrectangle");
        String shape = reader.nextLine();
        if (shape.equals("circle"))
        {
        System.out.println("Please enter radius");
        float radius = Float.parseFloat(reader.nextLine());
        double circleArea = circleArea(radius);
        double circlePerimeter = circlePerimeter(radius);
        System.out.printf("The area of your circle is %.2f",circleArea);
        System.out.println("");
        System.out.printf("The perimeter of your circle is %.2f",circlePerimeter);
    }
}
class Calculation{
    public  double circleArea(float radius){
        double circleArea = Math.PI * radius * radius;
        return circleArea;
    }
    public  double circlePerimeter (float radius){
        double circlePerimeter = 2 * Math.PI * radius;
        return circlePerimeter;
    }
    public  double rectanglePerimeter (float height, float base){
      double rectanglePerimeter = (2 * height + 2 * base);
      return rectanglePerimeter;
    }
}
}
