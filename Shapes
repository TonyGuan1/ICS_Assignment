import java.util.Scanner;
class Ape extends Calculation{
    public static void main(String args[]) {
        Scanner scanner = new Scanner(System.in);
        System.out.println("Please enter radius");
        float radius = scanner.nextFloat();
        double circleArea = circleArea(radius);
        double circlePerimeter = circlePerimeter(radius);
        System.out.println(circleArea);

    }
}
class Calculation{
    public static double circleArea(float radius){
        double circleArea = Math.PI * radius * radius;
        return circleArea;
    }
    public static double circlePerimeter (float radius){
        double circlePerimeter = 2 * Math.PI * radius;
        return circlePerimeter;
    }
    public static double squareArea (float base, float height){
      double squareArea = base * height;
      return squareArea;
    }
    public static double squarePerimeter(float sideLength){
      double squarePerimeter = 4 * sideLength;
      return squarePerimeter;
    }
}
